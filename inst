NAME=ctable
WWW=/srv/www/htdocs/servalys/tex
LOCAL=/home/local/texmf-local/tex/latex

echo y |tex $NAME.ins >/dev/null
pdflatex --interaction=batchmode $NAME.dtx > /dev/null
makeindex -q -s gglo.ist -o ctable.gls ctable.glo
makeindex -q -s gind.ist -o ctable.ind ctable.idx
pdflatex --interaction=batchmode $NAME.dtx > /dev/null
sudo cp $NAME.sty $LOCAL
cp -f $NAME.dtx $WWW
mv -f $NAME.{sty,pdf} $WWW
mk -c $NAME
sudo mktexlsr

# $Id$

