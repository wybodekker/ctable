%    \begin{macrocode}
\define@key{ctbl}{caption}{\def\@ctblcaption{#1}}%
\define@key{ctbl}{cap}{\def\@ctblcap{#1}}%
\define@key{ctbl}{label}{\def\@ctbllabel{#1}}%
\define@key{ctbl}{pos}{\def\@ctblpos{#1}\def\@ctblbegin{\@ctblbeg[#1]}}%
